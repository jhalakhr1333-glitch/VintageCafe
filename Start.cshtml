
@model string
@{
    ViewData["Title"]="Choose Mode";
    Layout = "_Layout";
}
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card p-4 text-center">
      <h3 class="mb-3">How would you like to order?</h3>
      <p class="text-muted mb-4">Select an option to continue</p>
      <div class="d-flex gap-3 justify-content-center">
        <form method="post" action="/Cafe/SetMode">
          <input type="hidden" name="mode" value="DineIn" />
          <button class="btn btn-primary btn-lg">Dine-In</button>
        </form>
        <form method="post" action="/Cafe/SetMode">
          <input type="hidden" name="mode" value="TakeAway" />
          <button class="btn btn-success btn-lg">Take-Away</button>
        </form>
      </div>
      @if(!string.IsNullOrEmpty(Model)){
        <p class="mt-3">Current selection: <span class="chip">@Model</span></p>
        <a class="btn btn-outline-secondary mt-2" href="/Cafe/Menu">Go to Menu</a>
      }
    </div>
  </div>
</div>
